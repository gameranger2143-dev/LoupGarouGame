{
  "name": "loup-garou-electron",
  "version": "1.0.0",
  "description": "Loup Garou multiplayer - Electron wrapper (ready to build on Windows)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win --x64"
  },
  "build": {
    "productName": "LoupGarou",
    "appId": "com.example.loupgarou",
    "files": [
      "**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "electron": "^26.0.0"
  },
  "devDependencies": {
    "electron-builder": "^24.6.0"
  }
}